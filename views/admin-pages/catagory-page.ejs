<%- include("../partials/admin-navbar") %> 

<!-- home page  -->
<div class="container ">
  <h2 class="page-title">Catagory</h2>
  <a href="/admin/catagory/add-catagory" class="btn btn-primary">Add A New Catagory</a>
<br><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

  </thead>
  <tbody id="title-table">

    <% catagory.forEach(pg =>{%>
      <tr id="id=<%= pg._id %>" class="<%= pg.slug %>" >
        <th class="text-capitalize"><%= pg.title %> </th> 
        <th> <a href="/admin/catagory/edit-catagory/<%= pg.slug %>">Edit</a></th>
        <% if(pg.title === 'home') {%> 
          <th></th>
        <% } else { %> 
          <th > <a class="delete__pages" href="/admin/catagory/delete-catagory/<%= pg._id %>">Delete</a></th>
        <% } %>  
      </tr>
    <%}) %> 
  </tbody>
</table>  

</div>



