<%- include("../partials/admin-navbar") %>
  <div class="container">
    <h2 class="text-muted ">Add a Product</h2>

    <a href="/admin/product" class="btn btn-primary">Back To Products</a>
    <br><br>
    <div class="form-warpper">
      <form action="/admin/product/add-product" method="post">
        <div class="form-group">
          <label class="text-capitalize">Title</label>
          <input type="text" class="form-control rounded-0" name="title" value="<%= title %>" placeholder="Title">
        </div>
        <div class="form-group">
          <label class="text-capitalize">slug</label>
          <input type="text" class="form-control rounded-0" name="slug" value="<%= slug %>" placeholder="slug">
        </div>
        <div class="form-group">
          <label class="text-capitalize">Price</label>
          <input type="number" class="form-control rounded-0" name="price" value="<%= price %>" placeholder="price">
        </div>
        <div class="form-group"></div>
        <label class="text-capitalize">Select A Catagory</label>
        <select class="form-select form-select-sm rounded-0" aria-label=".form-select-sm example" name="catagory">
          <% for(let catagory of catagories) {%>
            <option value="<%= catagory.title %>"><%= catagory.title %></option>
            <% } %>
        </select>
    </div>

    <div class="form-group">
      <label class="text-capitalize">Description</label>
      <textarea type="text" class="form-control rounded-0" row="3" id="ta" name="description" value="<%= description %>"
        placeholder="description"></textarea>
    </div>
    <div class="form-group">
      <label class="text-capitalize">Images</label>
      <input type="text" class="form-control rounded-0 image__input" row="3" name="images" 
        placeholder="image url">
      <div class="text-center"><div class="btn btn-sm btn-primary px-2 my-2">+</div></div>
    </div>

    <br>
    <button class="btn btn-outline-dark btn-sm rounded-0">Submit</button>
    </form>
  </div>
  </div>
  <%- include("../partials/footer") %>