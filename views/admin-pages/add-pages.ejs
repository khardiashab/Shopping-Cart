<%- include("../partials/admin-navbar") %> 
<div class="container">
  <h2 class="page-title">Add a Page</h2>

<a href="/admin/pages" class="btn btn-primary">Back To Pages</a>
<br><br>
<div class="form-warpper">
  <form action="/admin/pages/add-pages" method="post">
    <div class="form-group">
      <label class="fw-bold">Title</label>
      <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>
    <div class="form-group">
      <label class="fw-bold">Slug</label>
      <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
    </div>
    <div class="form-group">
      <label class="fw-bold" >Content</label>
      <textarea name="content" class="form-control" value="<%= content %>" id="ta" cols="30" rows="10"placeholder='content'></textarea>
    </div>
    <br>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
</div>
</div>
